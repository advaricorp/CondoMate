# Environment variables for the CondoMate backend

# FastAPI / Uvicorn
HOST="0.0.0.0"
PORT=3000
RELOAD=true # Set to false in production

# Database (MongoDB Atlas)
MONGO_DB_URL="mongodb+srv://<USER>:<PASSWORD>@<CLUSTER_URL>/<DB_NAME>?retryWrites=true&w=majority"
MONGO_DB_NAME="condomate"

# JWT Authentication
SECRET_KEY="your_strong_secret_key_here" # CHANGE THIS IN PRODUCTION!
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Add other configuration variables as needed
